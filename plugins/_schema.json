{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "dependencies": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      }
    },
    "module": {
      "type": "string"
    },
    "isolated": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["dependencies", "module"]
}
