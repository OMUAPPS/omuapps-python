{
    "configurations": [
        {
            "name": "Run Server",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--debug",
                "--token",
                "dev-token",
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
            "preLaunchTask": "pyright"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
    ]
}